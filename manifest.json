{
  "browser_action": {
    "default_icon": "run.png"
  },
  "description": "BEEVES base extension",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/runtime-examples",
  "manifest_version": 2,
  "name": "beeves_base",
  "version": "1.0",
  "permissions": ["notifications", "http://localhost:5000/*", "*://postman-echo.com/*", "webRequest", "<all_urls>", "https://speaktome-2.services.mozilla.com/", "storage"],
  "background": {
    "scripts": ["background.js", "speaktome.js"]
  },
  "icons": {
    "128": "run.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "base@beeves.com"
    }
  }
}
